<div class="section profile-heading">
    <div class="columns">
        <div class="column is-2">
            <div class="image is-128x128 avatar">
                <img src="https://placehold.it/256x256">
            </div>
        </div>
        <div class="column is-4 name">
            <p>
                <span class="title is-bold">{{firstName}} {{lastName}}</span>
                <span class="button is-primary is-outlined follow">Edit</span>
            </p>
            <p class="tagline">Username: {{username}}</p>
            <p class="tagline">Email: {{email}}</p>
        </div>
        <div class="column is-2 followers has-text-centered">
            <div class="stat-val social-logo"><img
                    src="https://cdn4.iconfinder.com/data/icons/miu-gloss-social/60/facebook-512.png"
                    alt="facebook"></div>
            {{#if facebook}}
                <p class="stat-key">{{facebook}}</p>
            {{else}}
                <p class="stat-key">Not set</p>
            {{/if}}
        </div>
        <div class="column is-2 following has-text-centered">
            <div class="stat-val social-logo"><img
                    src="http://icons.iconarchive.com/icons/dtafalonso/ios7-desktop/256/Skype-icon.png"
                    alt="skype"></div>
            {{#if skype}}
                <p class="stat-key">{{skype}}</p>
            {{else}}
                <p class="stat-key">Not set</p>
            {{/if}}
        </div>
        <div class="column is-2 likes has-text-centered">
            <div class="stat-val social-logo"><img
                    src="https://cdn4.iconfinder.com/data/icons/iconsimple-logotypes/512/twitter-128.png"
                    alt="twitter"></div>
            {{#if twitter}}
                <p class="stat-key">{{twitter}}</p>
            {{else}}
                <p class="stat-key">Not set</p>
            {{/if}}
        </div>
    </div>
</div>
<div class="profile-options">
    <div class="tabs is-fullwidth">
        <ul>
        </ul>
    </div>
</div>