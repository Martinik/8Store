<script>
    function initMap() {
        let lat = $("#lat").val();
        let lng = $("#lng").val();
        let radius = $("#radius").val();
        let petLocation =  {lat: Number(lat), lng: Number(lng)};
        let petRadius = Number(radius);

        let map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: petLocation,
            mapTypeId: 'terrain'
        });

        let marker = new google.maps.Marker({
            position: petLocation,
            map: map,
            icon: "../img/icon-lost-map.png"
        });

        let petCircle = new google.maps.Circle({
            strokeColor: '#FF0000',
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: '#FF0000',
            fillOpacity: 0.35,
            map: map,
            center: petLocation,
            radius: petRadius,
            draggable: false,
            editable: false
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDS-RX-iagXzk6sZHXDf-vlNsVN3KXGaE&callback=initMap">
</script>