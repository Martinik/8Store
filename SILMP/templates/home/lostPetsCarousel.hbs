<section class="carousel-section">

    <!--lost pets carousel-->
    <div class="block bg-primary block-pd-lg block-bg-overlay text-center carousel-block" data-bg-img="../img/parallax-bg.jpg" data-settings='{"stellar-background-ratio": 0.6}' data-toggle="parallax-bg">

        <div class="row">
            <div class="text-center carousel-title col-lg-12">
                <h2>
                    Recently Lost Pets
                </h2>
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-lg-12">
                <div class="pet-carousel">

                    {{#each lostPets}}
                        {{> carouselLostPet}}
                    {{/each}}

                </div>
            </div>
        </div>

    </div>

</section>